
<div class="container d-flex">
  <div class="d-flex align-items-start">
    <div class="align-self-center">
      <h1 class="align-items-start">New game</h1>

      <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
        <div class="align-items-start btn-group mr-2 ml-5" role="group" aria-label="First group">
          <ul>
            <% @letters.each do |letter| %>
              <li type="button" class="align-items-start btn btn-secondary mr-2"><%= letter %></li>
            <% end %>
          </ul>
        </div>


      <div class="form-inline align-items-start">
        <form action="/results" method="post">
          <input class="form-control" type="text" name="word" placeholder="Write a word" value="<%= params[:word] %>">
          <input type="submit" value="Confirm!" class="btn btn-primary">

          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

        </form>
      </div>

    </div>
    <p class="mt-5 btn btn-dark">
      <%= link_to 'Return Home page to start new game', home_path %>
    </p>
  </div>

</div>
